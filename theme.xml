<?xml version="1.0" encoding="UTF-8"?>
<theme defaultTransition="instant" defaultView="gamecarousel">
    <formatVersion>7</formatVersion>

    <!--
        Display: 1280x480 (two 640x480 screens horizontally spanned)
        Top screen (left): X 0-0.5, center X=0.25
        Bottom screen (right): X 0.5-1.0, center X=0.75
    -->

    <!-- This section generously provided by Ant (https://github.com/anthonycaccese)
    ///
    View: Screen
    ///
    -->
    <view name="screen">
        <!-- Start: Resets -->
        <controllerActivity name="controllerActivity">
            <visible>false</visible>
        </controllerActivity>
        <batteryIndicator name="batteryIndicator">
            <visible>false</visible>
        </batteryIndicator>
        <text name="clock">
            <pos>1 1</pos>
        </text>
        <!-- End: Resets -->
    </view>

    <!-- Global elements -->
    <view name="system, gamecarousel">
        <!-- Both screens -->
        <image name="background" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/images/common/background.png</path>
            <zIndex>0</zIndex>
        </image>

        <!-- Top screen (X 0-0.5) -->
        
        <!-- This section (and its graphics) generously provided by Ant (https://github.com/anthonycaccese) -->
        <!-- Start: System Indicators -->
        <stackpanel name="system-indicators-left,system-indicators-right" extra="true">
            <w>0.484375</w><!-- 620 -->
            <h>0.05625</h><!-- 27 -->
            <separator>5</separator>
            <pos>0.0078125 0.0166667</pos><!-- 10 8 -->
        </stackpanel>
        <stackpanel name="system-indicators-left" extra="true">
            <orientation>horizontal</orientation>
            <reverse>false</reverse>
            <clock name="system-clock">
                <color>333333FF</color>
                <fontPath>./assets/fonts/dsi_font.otf</fontPath>
                <fontSize>0.0291667</fontSize><!-- 14 -->
                <lineSpacing>1</lineSpacing>
            </clock>
        </stackpanel>
        <stackpanel name="system-indicators-right" extra="true">
            <orientation>horizontal</orientation>
            <reverse>true</reverse>
            <batteryText name="system-battery-text">
                <color>333333FF</color>
                <fontPath>./assets/fonts/dsi_font.otf</fontPath>
                <fontSize>0.0291667</fontSize><!-- 14 -->
                <lineSpacing>1</lineSpacing>
            </batteryText>
            <batteryIcon name="system-battery-icon">
                <maxSize>1 1</maxSize>
                <full>./assets/images/common/battery_icon_100.svg</full>
                <at75>./assets/images/common/battery_icon_75.svg</at75>
                <at50>./assets/images/common/battery_icon_50.svg</at50>
                <at25>./assets/images/common/battery_icon_25.svg</at25>
                <empty>./assets/images/common/battery_icon_0.svg</empty>
                <incharge>./assets/images/common/battery-icon-charging.svg</incharge>
            </batteryIcon>
            <networkIcon name="system-network-icon">
                <maxSize>1 1</maxSize>
                <color>333333FF</color>
                <networkIcon>./assets/images/common/network_icon_on.svg</networkIcon>
                <planemodeIcon>./assets/images/common/network_icon_off.svg</planemodeIcon>
            </networkIcon>
        </stackpanel>
        <!-- End: System Indicators -->

        <image name="left_tab_image" extra="true">
            <path>./assets/images/common/left_tab.png</path>
            <pos>0 0.85</pos>
            <size>0.125 0.15</size>
            <zIndex>1</zIndex>
        </image>

        <text name="left_tab_text" extra="true">
            <text>Prev</text>
            <pos>0.05 0.875</pos>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.05</fontSize>
            <color>333333FF</color>
            <alignment>left</alignment>
            <zIndex>2</zIndex>
        </text>

        <image name="right_tab_image" extra="true">
            <path>./assets/images/common/right_tab.png</path>
            <pos>0.375 0.85</pos>
            <size>0.125 0.15</size>
            <zIndex>1</zIndex>
        </image>

        <text name="right_tab_text" extra="true">
            <text>Next</text>
            <pos>0.4 0.875</pos>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.05</fontSize>
            <color>333333FF</color>
            <alignment>right</alignment>
            <zIndex>2</zIndex>
        </text>

        <!-- Bottom screen (X 0.5-1.0) -->
        <image name="text_bubble" extra="true">
            <path>./assets/images/common/text_bubble.png</path>
            <pos>0.75 0.3</pos>
            <origin>0.5 0.5</origin>
            <size>0.4 0.45</size>
            <zIndex>56</zIndex>
        </image>

        <image name="start_window" extra="true">
            <path>./assets/images/common/start_window.png</path>
            <pos>0.75 0.67</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.12 0.32</maxSize>
            <zIndex>55</zIndex>
        </image>

        <image name="scroll_bar" extra="true">
            <path>./assets/images/common/scroll_bar.png</path>
            <pos>0.75 0.95</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.1</size>
            <zIndex>1</zIndex>
        </image>

        <!-- Visibility override -->
        <helpsystem name="help">
            <textColor>00000000</textColor>
            <iconColor>00000000</iconColor>
        </helpsystem>
    </view>

    <!-- Main system selection menu -->
    <view name="system">
        <!-- Top screen (X 0-0.5) -->
        <image name="distro_logo" extra="true">
            <path>./assets/images/common/distro_logo.png</path>
            <pos>0.25 0.5</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.3 0.6</maxSize>
            <zIndex>1</zIndex>
        </image>

        <!-- Bottom screen (X 0.5-1.0) -->
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <pos>0.75 0.64</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.25</size>
            <logoSize>0.09 0.15</logoSize>
            <logoScale>1</logoScale>
            <color>00000000</color>
            <maxLogoCount>5</maxLogoCount>
            <zIndex>50</zIndex>
            <defaultTransition>instant</defaultTransition>
            <transitionSpeed>0</transitionSpeed>
            <scrollSound>./assets/sounds/scroll.wav</scrollSound>
            <minLogoOpacity>1</minLogoOpacity>
            <systemInfoDelay>0</systemInfoDelay>
        </carousel>

        <image name="menu_slot0" extra="true">
            <path>./assets/images/common/menu_slot.png</path>
            <pos>0.55 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <image name="menu_slot1" extra="true">
            <path>./assets/images/common/menu_slot.png</path>
            <pos>0.65 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <image name="menu_slot2" extra="true">
            <path>./assets/images/common/menu_slot.png</path>
            <pos>0.75 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <image name="menu_slot3" extra="true">
            <path>./assets/images/common/menu_slot.png</path>
            <pos>0.85 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <image name="menu_slot4" extra="true">
            <path>./assets/images/common/menu_slot.png</path>
            <pos>0.95 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <text name="logoText">
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <forceUppercase>true</forceUppercase>
            <fontSize>0.03</fontSize>
            <storyboard>
                <animation event="scroll" property="scale"/>
            </storyboard>
        </text>

        <text name="systemName" extra="true">
            <text>{system:fullName}</text>
            <pos>0.75 0.15</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.1</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.04</fontSize>
            <color>333333FF</color>
            <alignment>center</alignment>
            <zIndex>57</zIndex>
        </text>

        <text name="systemInfo">
            <pos>0.75 0.35</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.3</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.025</fontSize>
            <color>333333FF</color>
            <alignment>center</alignment>
            <zIndex>53</zIndex>
        </text>

        <image name="logo">
            <path>./assets/images/systems/default.png</path>
            <path>./assets/images/systems/${system.theme}.png</path>
            <storyboard>
                <animation event="scroll" property="scale"/>
            </storyboard>
        </image>
    </view>

    <view name="gamecarousel">
        <!-- Both screens -->
        <sound name="launch">
            <path>./assets/sounds/launch.wav</path>
        </sound>

        <!-- Top screen (X 0-0.5) -->
        <image name="preview_panel" extra="true">
            <path>./assets/images/common/preview_panel.png</path>
            <pos>0.25 0.45</pos>
            <origin>0.5 0.5</origin>
            <size>0.4 0.65</size>
            <zIndex>1</zIndex>
        </image>

        <video name="md_video">
            <pos>0.25 0.45</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.35 0.6</maxSize>
            <delay>3</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
            <snapshotSource>image</snapshotSource>
            <zIndex>2</zIndex>
        </video>

        <text name="logoText">
            <pos>0.25 0.9</pos>
            <origin>0.5 0.5</origin>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
        </text>

        <!-- Bottom screen (X 0.5-1.0) -->
        <gamecarousel name="gamecarousel">
            <type>horizontal</type>
            <pos>0.75 0.64</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.25</size>
            <logoSize>0.3 0.5</logoSize>
            <logoScale>1</logoScale>
            <color>00000000</color>
            <maxLogoCount>5</maxLogoCount>
            <zIndex>50</zIndex>
            <defaultTransition>instant</defaultTransition>
            <transitionSpeed>0</transitionSpeed>
            <scrollSound>./assets/sounds/scroll.wav</scrollSound>
            <minLogoOpacity>1</minLogoOpacity>
            <imageSource if="${system.hardwareType} == 'System'">image</imageSource>
        </gamecarousel>

        <image name="game_slot0" extra="true">
            <path>./assets/images/common/game_slot.png</path>
            <pos>0.55 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <image name="game_slot1" extra="true">
            <path>./assets/images/common/game_slot.png</path>
            <pos>0.65 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <image name="game_slot2" extra="true">
            <path>./assets/images/common/game_slot.png</path>
            <pos>0.75 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <image name="game_slot3" extra="true">
            <path>./assets/images/common/game_slot.png</path>
            <pos>0.85 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <image name="game_slot4" extra="true">
            <path>./assets/images/common/game_slot.png</path>
            <pos>0.95 0.65</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>49</zIndex>            
        </image>

        <text name="md_name">
            <pos>0.75 0.15</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.1</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.04</fontSize>
            <color>333333FF</color>
            <alignment>center</alignment>
            <zIndex>57</zIndex>
        </text>

        <text name="md_description">
            <pos>0.75 0.31</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.22</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.03</fontSize>
            <color>555555FF</color>
            <alignment>center</alignment>
            <zIndex>57</zIndex>
        </text>

        <image name="gamecarouselLogo">
            <storyboard>
                <animation event="scroll" property="scale"/>
            </storyboard>
        </image>

        <text name="gamecarouselLogoText">
            <fontSize>0.01</fontSize>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <storyboard>
                <animation event="scroll" property="scale"/>
            </storyboard>
        </text>
    </view>

    <view name="menu">
        <menuText name="menutext, menutitle, menufooter">
            <fontSize>0.03</fontSize>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
        </menuText>

        <menuTextSmall name="menutextsmall">
            <fontSize>0.03</fontSize>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
        </menuTextSmall>
    </view>
</theme>
