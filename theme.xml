<?xml version="1.0" encoding="UTF-8"?>
<theme defaultTransition="instant">
    <formatVersion>7</formatVersion>

    <!--
        Display: 1280x480 (two 640x480 screens horizontally spanned)
        Top screen (left): X 0-0.5, center X=0.25
        Bottom screen (right): X 0.5-1.0, center X=0.75
    -->

    <view name="screen">
        <!-- Visibility override -->
        <controllerActivity name="controllerActivity">
            <visible>false</visible>
        </controllerActivity>
    </view>

    <!-- Global elements -->
    <view name="system, gamecarousel">
        <!-- Both screens -->
        <image name="background" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/images/common/background.png</path>
            <zIndex>0</zIndex>
        </image>

        <!-- Top screen (X 0-0.5) -->
        <image name="left_tab_image" extra="true">
            <path>./assets/images/common/left_tab.png</path>
            <pos>0 0.85</pos>
            <size>0.125 0.15</size>
            <zIndex>1</zIndex>
        </image>

        <text name="left_tab_text" extra="true">
            <text>Prev</text>
            <pos>0.05 0.875</pos>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.05</fontSize>
            <color>333333FF</color>
            <alignment>left</alignment>
            <zIndex>2</zIndex>
        </text>

        <image name="right_tab_image" extra="true">
            <path>./assets/images/common/right_tab.png</path>
            <pos>0.375 0.85</pos>
            <size>0.125 0.15</size>
            <zIndex>1</zIndex>
        </image>

        <text name="right_tab_text" extra="true">
            <text>Next</text>
            <pos>0.4 0.875</pos>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.05</fontSize>
            <color>333333FF</color>
            <alignment>right</alignment>
            <zIndex>2</zIndex>
        </text>

        <!-- Bottom screen (X 0.5-1.0) -->
        <image name="text_bubble" extra="true">
            <path>./assets/images/common/text_bubble.png</path>
            <pos>0.75 0.3</pos>
            <origin>0.5 0.5</origin>
            <size>0.4 0.45</size>
            <zIndex>56</zIndex>
        </image>

        <image name="start_window" extra="true">
            <path>./assets/images/common/start_window.png</path>
            <pos>0.75 0.67</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.12 0.32</maxSize>
            <zIndex>55</zIndex>
        </image>

        <image name="scroll_bar" extra="true">
            <path>./assets/images/common/scroll_bar.png</path>
            <pos>0.75 0.95</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.1</size>
            <zIndex>1</zIndex>
        </image>

        <!-- Visibility override -->
        <helpsystem name="help">
            <textColor>00000000</textColor>
            <iconColor>00000000</iconColor>
        </helpsystem>
    </view>

    <!-- Main system selection menu -->
    <view name="system">
        <!-- Both screens -->
        <sound name="launch">
            <path>./assets/sounds/select.wav</path>
        </sound>

        <!-- Top screen (X 0-0.5) -->
        <image name="distro_logo" extra="true">
            <path>./assets/images/common/distro_logo.png</path>
            <pos>0.25 0.5</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.3 0.6</maxSize>
            <zIndex>1</zIndex>
        </image>

        <!-- Bottom screen (X 0.5-1.0) -->
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <pos>0.75 0.65</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.25</size>
            <logoSize>0.04 0.12</logoSize>
            <logoScale>2.3</logoScale>
            <color>00000000</color>
            <maxLogoCount>5</maxLogoCount>
            <zIndex>50</zIndex>
            <defaultTransition>instant</defaultTransition>
            <scrollSound>./assets/sounds/scroll.wav</scrollSound>
        </carousel>

        <text name="logoText">
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <forceUppercase>true</forceUppercase>
        </text>

        <text name="systemInfo">
            <pos>0.75 0.35</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.3</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.025</fontSize>
            <color>333333FF</color>
            <alignment>center</alignment>
            <zIndex>53</zIndex>
        </text>

        <image name="logo">
            <path>./assets/images/common/menu_slot.png</path>
            <!-- Ward off the default animations with this one weird trick! -->
            <storyboard>
                <animation event="scroll" property="scale"/>
                <animation event="scroll" property="opacity"/>
            </storyboard>
        </image>

        <image name="scroll_window_sys" extra="true">
            <path>./assets/images/common/scroll_window.png</path>
            <pos>0.75 0.95</pos>
            <origin>0.5 0.5</origin>
            <size>0.05 0.1</size>
            <zIndex>2</zIndex>
        </image>
    </view>

    <view name="gamecarousel">
        <!-- Both screens -->
        <sound name="launch">
            <path>./assets/sounds/launch.wav</path>
        </sound>
        <sound name="back">
            <path>./assets/sounds/back.wav</path>
        </sound>

        <!-- Top screen (X 0-0.5) -->
        <image name="preview_panel" extra="true">
            <path>./assets/images/common/preview_panel.png</path>
            <pos>0.25 0.45</pos>
            <origin>0.5 0.5</origin>
            <size>0.4 0.65</size>
            <zIndex>1</zIndex>
        </image>

        <video name="md_video">
            <pos>0.25 0.45</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.35 0.6</maxSize>
            <delay>3</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
            <snapshotSource>image</snapshotSource>
            <zIndex>2</zIndex>
        </video>

        <!-- Bottom screen (X 0.5-1.0) -->
        <gamecarousel name="gamecarousel">
            <type>horizontal</type>
            <pos>0.75 0.75</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.25</size>
            <logoSize>0.09 0.24</logoSize>
            <logoScale>1.0</logoScale>
            <color>00000000</color>
            <maxLogoCount>5</maxLogoCount>
            <zIndex>50</zIndex>
            <scrollSound>./assets/sounds/scroll.wav</scrollSound>
        </gamecarousel>

        <text name="md_name">
            <pos>0.75 0.15</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.1</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.04</fontSize>
            <color>333333FF</color>
            <alignment>center</alignment>
            <zIndex>57</zIndex>
        </text>

        <text name="md_description">
            <pos>0.75 0.31</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.22</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.03</fontSize>
            <color>555555FF</color>
            <alignment>center</alignment>
            <zIndex>57</zIndex>
        </text>

        <image name="md_thumbnail">
            <pos>0.75 0.64</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>51</zIndex>
        </image>

        <image name="gamecarouselLogo"> <!-- Supposedly this should work for gamecarousel? -->
            <path>./assets/images/common/menu_slot.png</path>
            <storyboard>
                <animation event="scroll" property="scale"/>
                <animation event="scroll" property="opacity"/>
            </storyboard>
        </image>

        <image name="scroll_window_game" extra="true">
            <path>./assets/images/common/scroll_window.png</path>
            <pos>0.75 0.95</pos>
            <origin>0.5 0.5</origin>
            <size>0.05 0.1</size>
            <zIndex>2</zIndex>
        </image>
    </view>
</theme>
